<UserControl 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" 
    d:DesignWidth="800" 
    d:DesignHeight="450"
    x:Class="Live2DCSharpSDK.Avalonia.Avatar.UI.QuestionControl">
    <ItemsControl x:Name="QuestionsList" ItemsSource="{Binding DisplayQuestions}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Button Content="{Binding Question}" Tag="{Binding Id}" Click="QuestionButton_Click"/>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
